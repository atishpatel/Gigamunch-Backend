{
  "defaultSeverity": "warning",
  "extends": "tslint-config-airbnb",
  "rules": {
    // Custom rules
    "trailing-comma": [true],
    "no-increment-decrement": false,
    "max-line-length": [
      false
    ],
    "quotemark": [true, "single"],
    "indent": [true, "spaces", 2],
    "align": [true, "statements"],
    "import-name": [false],
    "function-name": false,
    "no-console": [false],
    "variable-name": [true, "allow-pascal-case"]
  }
}
