{
  "env": {
    "node": false,
    "browser": true,
    "es6": true
  },
  "plugins": ["html"],
  "rules": {
    "no-var": "off",
    "max-len": ["error", {
      "code": 400
    }],
    "new-cap": ["error", {
      "capIsNewExceptions": ["Polymer"]
    }]
  },
  "globals": {
    "Polymer": true,
    "ga": true
  },
  "extends": "airbnb/base",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 6
  }
}
